<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Chisla"
        android:textSize="50sp"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="0"
        android:gravity="center|end"/>
    <TextView
        android:id="@+id/Deystvia"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:gravity="center|end"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Chisla" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Deystvia">

        <TableRow>

            <Button
                android:id="@+id/B7"
                android:onClick="Chislo"
                android:text="7"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/B8"
                android:onClick="Chislo"
                android:text="8"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/B9"
                android:onClick="Chislo"
                android:text="9"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/Delit"
                android:onClick="Doing"
                android:text="รท"
                android:layout_height="100dp"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/B4"
                android:onClick="Chislo"
                android:text="4"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/B5"
                android:onClick="Chislo"
                android:text="5"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/B6"
                android:onClick="Chislo"
                android:text="6"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/Umnojit"
                android:onClick="Doing"
                android:text="*"
                android:layout_height="100dp"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/B1"
                android:onClick="Chislo"
                android:text="1"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/B2"
                android:onClick="Chislo"
                android:text="2"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/B3"
                android:onClick="Chislo"
                android:text="3"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/Minus"
                android:onClick="Doing"
                android:text="-"
                android:layout_height="100dp"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/Clear"
                android:onClick="ClearAll"
                android:text="C"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/B0"
                android:onClick="Chislo"
                android:text="0"
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/Ravno"
                android:onClick="Ravnoe"
                android:text="="
                android:layout_height="100dp"/>

            <Button
                android:id="@+id/Plus"
                android:onClick="Doing"
                android:text="+"
                android:layout_height="100dp"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>