<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Chisla"
        android:textSize="50sp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="0"
        android:gravity="center|end"/>
    <TextView
        android:id="@+id/Deystvia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center|end"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Chisla" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>
            <Button
                android:text="√"
                android:id="@+id/Koren"
                android:onClick="Korny"/>
            <Button
                android:text="7"
                android:id="@+id/B7"
                android:onClick="Chislo"/>
            <Button
                android:text="8"
                android:id="@+id/B8"
                android:onClick="Chislo"/>
            <Button
                android:text="9"
                android:id="@+id/B9"
                android:onClick="Chislo"/>
            <Button
                android:text="÷"
                android:id="@+id/Delit"
                android:onClick="Doing"/>
        </TableRow>
        <TableRow>
            <Button
                android:text="xʸ"
                android:id="@+id/Stepen"
                android:onClick="Doing"/>
            <Button
                android:text="4"
                android:id="@+id/B4"
                android:onClick="Chislo"/>
            <Button
                android:text="5"
                android:id="@+id/B5"
                android:onClick="Chislo"/>
            <Button
                android:text="6"
                android:id="@+id/B6"
                android:onClick="Chislo"/>
            <Button
                android:text="*"
                android:id="@+id/Umnojit"
                android:onClick="Doing"/>
        </TableRow>
        <TableRow>
            <Button
                android:text="|x|"
                android:id="@+id/Modul"
                android:onClick="Modely"/>
            <Button
                android:text="1"
                android:id="@+id/B1"
                android:onClick="Chislo"/>
            <Button
                android:text="2"
                android:id="@+id/B2"
                android:onClick="Chislo"/>
            <Button
                android:text="3"
                android:id="@+id/B3"
                android:onClick="Chislo"/>
            <Button
                android:text="-"
                android:id="@+id/Minus"
                android:onClick="Doing"/>
        </TableRow>
        <TableRow>
            <Button
                android:text="x!"
                android:id="@+id/Facktorial"
                android:onClick="Fackty"/>
            <Button
                android:text="C"
                android:id="@+id/Clear"
                android:onClick="ClearAll"/>
            <Button
                android:text="0"
                android:id="@+id/B0"
                android:onClick="Chislo"/>
            <Button
                android:text="="
                android:id="@+id/Ravno"
                android:onClick="Ravnoe"/>
            <Button
                android:text="+"
                android:id="@+id/Plus"
                android:onClick="Doing"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>